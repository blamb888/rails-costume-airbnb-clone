<div class="container">
  <div class="text-center">
    <h1>Costumes For You</h1>
  </div>
  <div class="cards-index">
    <% @costumes.each do |costume| %>
      <div class="card-index">
      <%= cl_image_tag costume.photo.key, height: 50, width: 50, crop: :fill  %>
        <div class="row">
          <div class="col-12">
            <%= link_to costume_path(costume) do %>
              <ul>
                NAME
                <li> <%= costume.name %> </li>
                CATEGORY
                <li> <%= costume.category %> </li>
                DESCRIPTION
                <li> <%= costume.description %> </li>
                <li> PRICE $<%= costume.price %> </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to "Back to homepage", root_path %>
  </div>
</div>
