<div class="container d-flex justify-content-center">
  <div class="card p-3 m-3" style="">
    <h1><strong>Add new costume</strong></h1>
    <%= simple_form_for [@costume] do |f| %>  
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category %>
    <%= f.input :photo, as: :file , class: "btn btn-outline-danger mb-3" %>
    <%= f.submit "Add Costume", class: "btn btn-outline-danger mb-3"%>
    <% end %>
  </div>
</div>
