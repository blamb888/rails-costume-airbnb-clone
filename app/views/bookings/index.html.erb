<div class="d-flex container-fluid my-0 flex-grow-1 align-content-center">
  <div class="mr-5">
    <ul class="nav tabs-underlined" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="active tab-underlined" id="my-costumes-tab" data-toggle="tab" href="#bookings" role="tab" aria-controls="home" aria-selected="true">Lending</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="tab-underlined" id="my-bookings-tab" data-toggle="tab" href="#requests" role="tab" aria-controls="profile" aria-selected="false">Renting</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="tab-underlined" id="profile-tab" data-toggle="tab" href="#converstions" role="tab" aria-controls="converstion" aria-selected="false">Profile</a>
      </li>
    </ul>
  </div>
  <div class="mx-auto">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade py-3 show active" id="bookings" role="tabpanel" aria-labelledby="my-costumes-tab">
        <div class="container d-flex flex-wrap">
          <% current_user.costumes.each do |costume| %>
            <%= render "costumes/costume_show_card", costume: costume %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade py-3" id="requests" role="tabpanel" aria-labelledby="my-bookings-tab">
        <%= render "bookings/booking_show_card" %>
      </div>
      <div class="tab-pane fade py-3" id="converstions" role="tabpanel" aria-labelledby="profile-tab">
        <%= render "user_profile" %>
      </div>
    </div>
  </div>
</div>
