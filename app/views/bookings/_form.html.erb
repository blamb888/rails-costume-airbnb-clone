<div class="container d-flex justify-content-center">
  <div class="card col-6 p-3" style="width: 22rem; margin-top: 50px;">
    <h4><%= @costume.name %></h4>
    <h6><%= @costume.category %></h6>
    <h6><%= @costume.description %></h6>
    <h6><%= @costume.price %></h6>
    <h6><%= @costume.user.email %></h6>
    <%= simple_form_for [@costume, @booking] do |f| %>
    <%= f.input :checkout_date, html5: true %>
    <%= f.input :return_date, html5: true%>
      <%= f.submit class: "btn btn-primary btn-block"  %>
    <% end %>
    <div class="containter my-3">
      <%= link_to 'Back', root_path, class: "btn btn-primary" %>
      <%= link_to 'Home', costumes_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
